<h1>予定一覧</h1>
<p><%= link_to "新規追加", :new_post %></p>

<h3>ユーザー情報一覧</h3>

<% if flash[:notice] %>
    <p class="notice"><%= flash[:notice] %></p>
<% end %>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>タイトル</th>
      <th>開始日</th>
      <th>終了日</th>
      <th>終日</th>
      <th>更新日時</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.title %></td>
        <td><%= post.start_date.strftime("%Y/%m/%d") %></td>
        <td><%= post.end_date.strftime("%Y/%m/%d") %></td>
        <td><%= post.all_day ? "◯" : "" %></td>
        <td><%= post.updated_at.in_time_zone("Tokyo").strftime("%Y/%m/%d %H:%M") %></td>
        <td><%= link_to "詳細", post %></td>
        <td><%= link_to "編集", [:edit,post] %></td>
          <td><%= link_to "削除", post, method: :delete, data: { confirm: "#{post.title}を削除してよろしいですか?この操作は取り消せません。" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>